<project name="clean">

	<target description="Clean the project libraries directory (dependencies)."
		name="clean-lib">
		
        <delete includeemptydirs="true" dir="./lib"/>
    </target>

	<target description="Cleans the build output."
		name="clean-build">
		
		<delete dir="./bin" />
	</target>
	
	<target description="Cleans temporary test output."
		name="clean-test">
		
		<delete dir="./test-tmp" />
	</target>
	
	<target description="Cleans all generated artifacts."
		name="clean"
		depends="@before-clean,clean-lib,clean-build,@on-clean">
		
		<antcall target="@after-clean"/>
	</target>
	
	<extension-point name="@before-clean"/>
	<extension-point name="@on-clean"/>
	<extension-point name="@after-clean"/>
	
</project>
